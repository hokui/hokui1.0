<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Subject</th>
    <th>Number</th>
    <th>Q/A</th>
    <th>File</th>
    <th>File_name</th>
    <th>Content_type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <td><%= quiz.id %></td>
    <td><%= quiz.subject.screen_title %></td>
    <td><%= quiz.number %></td>
    <td><%= if quiz.type==1 do "A" else "Q" end %></td>
    <td><%= quiz.file %></td>
    <td><%= quiz.file_name %></td>
    <td><%= quiz.content_type %></td>
    <td><%= link_to 'Show', quiz %></td>
    <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
    <td><%= link_to 'Destroy', quiz, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />


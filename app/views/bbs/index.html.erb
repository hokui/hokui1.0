<h1>BBS page</h1>

<h2>Topic一覧</h2>

<h3>雑談板</h3>
<ul>
<% BbsGroup.where(is_a_term: false).each do |group| %>
  <li><%= group.title %>
    <ul>
    <% BbsTopic.where(bbs_group_id: group.id).each do |topic| %>
      <li class="bbs-topic">
        <div class="bbs-title">
          <%= topic.title %>
          <input id="bbs-display-button-<%=topic.id%>" type="button" value="表示" onClick="bbs_onClick(<%= topic.id %>)">
          <input id="bbs-destroy-button-<%=topic.id%>" type="button" value="非表示" disabled="disabled" onClick="bbs_destroy(<%= topic.id %>)">
        </div>
        <div id="bbs-wrapper-<%=topic.id%>">
        </div>
      </li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>


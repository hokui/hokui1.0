<h1>BBS page</h1>

<h2>Topic一覧</h2>

<h3>雑談板</h3>
<ul>
<% BbsGroup.where(is_a_term: false).each do |group| %>
  <li><%= group.title %>
    <ul>
    <% BbsTopic.where(bbs_group_id: group.id).each do |topic| %>
      <li class="bbs-topic">
        <div class="bbs-topic-title"><%= topic.title %></div>
        <div class="bbs-topic-bodies" id="topic-id-<%= topic.id %>"></div>
      </li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>

<h3>教科板</h3>
<ul>
<% BbsGroup.where(is_a_term: true).each do |group| %>
  <li><%= group.title %>
    <ul>
    <% BbsTopic.where(bbs_group_id: group.id).each do |topic| %>
      <li class="bbs-topic">
        <div class="bbs-topic-title"><%= topic.title %></div>
        <div class="bbs-topic-bodies" id="topic-id-<%= topic.id %>"></div>
      </li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>

<h1>Listing terms</h1>

<table class="admin-index">
  <tr>
    <th class="id"></th>
    <th class="term-title">Title</th>
    <th colspan="3" class="menu"></th>
  </tr>

<% @terms.each do |term| %>
  <tr>
    <td><%= term.id %></td>
    <td><%= term.title %></td>
    <td><%= link_to 'Show', term %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Term', new_term_path %>

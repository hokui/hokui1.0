<div>
  <%= form_tag({controller: 'users',action: 'process_login_request'}) do %>
    <div class="field">
      <%= label_tag :mail %>
      <%= text_field_tag :mail %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="action">
      <%= submit_tag 'login' %>
    </div>
  <% end %>
</div>

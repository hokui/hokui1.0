<%= link_to 'change password', '/profile/change_password' %>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :full_name %><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :handle_name %><br />
    <%= f.text_field :handle_name %>
  </div>
  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, use_month_numbers: true, start_year: 1980, end_year: 1995 %>
  </div>
  <div class="field">
    <%= f.label :mail %>
    <%= f.email_field :mail %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


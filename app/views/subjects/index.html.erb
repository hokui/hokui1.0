<h1>Listing subjects</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Term</th>
    <th>Page_title</th>
    <th>Screen_title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>
  <tr>
    <td><%= subject.id %></td>
    <td><%= subject.term.title %></td>
    <td><%= subject.page_title %></td>
    <td><%= subject.screen_title %></td>
    <td><%= link_to 'Show', subject %></td>
    <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td><%= link_to 'Destroy', subject, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<h1>Listing summaries</h1>

<table class="admin-index">
  <tr>
    <th class="id"></th>
    <th class="sub">Sub</th>
    <th class="number">No</th>
    <th class="content-type">Content_type</th>
    <th colspan="4" class="dl-menu"></th>
  </tr>

<% @summaries.each do |summary| %>
  <tr>
    <td><%= summary.id %></td>
    <td><%= summary.subject.screen_title %>
    <td><%= summary.number %></td>
    <td><%= summary.content_type %></td>
    <td><%= link_to 'DL',
      { controller: 'summaries', action: 'download', id: summary.id } %></td>
    <td><%= link_to 'Show', summary %></td>
    <td><%= link_to 'Edit', edit_summary_path(summary) %></td>
    <td><%= link_to 'Destroy', summary, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Summary', new_summary_path %>

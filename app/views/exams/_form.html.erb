  </div>
  <div class="field">
    <%= f.label :type %><br />
    <%= f.check_box :type %>
  </div>
  <div class="field">
    <%= f.label :file %><br />
    <%= f.file_field :file %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h1>学期管理</h1>
<% if @notice.blank? %>
<section>
  <table class="admin-index">
    <tr>
      <th class="id"></th>
      <th class="sub">Title</th>
      <th class="id">BBS-Group-ID</th>
      <th class="menu"></th>
    </tr>

  <% @terms.each do |term| %>
    <tr>
      <td><%= term.id %></td>
      <td><%= term.title %></td>
      <td><%= term.bbs_group_id %></td>
      <td><%= link_to 'edit', {action: 'edit_term', id: term.id} %></td>
    </tr>
  <% end %>
  </table>
</section>
<% else %>
  <%= @notice %>
<% end %>
<%= link_to 'new', action: 'new_term' %>

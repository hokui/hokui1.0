html
{
  height: 100%;
}

body
{
  height: 100%;
  margin: 0;
  padding: 0;
  background-image: url(<%= asset_path 'grobal-image/grobal-bg.png' %>);
  background-repeat: repeat;
  font-size: 14px;
  color: #3e3e3e;
  letter-spacing: 0.1em;
}

#grobal-dummy-wrapper
{
  width: 1102px;
  height: 100%;
  min-height: 100%;
  margin: 0 auto;
  background-image: url(<%= asset_path 'grobal-image/grobal-bg-side.png' %>);
  background-repeat: repeat-y;
}

body > #grobal-dummy-wrapper
{
  height: auto;
}

#grobal-wrapper
{
  width: 980px;
  height: 100%;
  margin: 0 auto;
  padding: 0;
  background: none;
  background-color: #ffffff;
}

#grobal-header
{
  margin: 0;
  padding: 0;
  clear: both;
  height: 88px;
  position: relative;
}

#grobal-header #grobal-banner
{
  position: relative;
}

#grobal-header #grobal-banner img
{
  width: 980px;
  height: 60px;
  margin: 0;
  padding: 0;
  z-index: 0;
}

#grobal-header #grobal-banner #grobal-user-menu
{
  position: absolute;
  top: 10px; right: 15px;
  z-index: 1;
  text-align: right;
}

#grobal-header #grobal-header-menu
{
  margin: 0;
  padding: 0;
  width: 980px;
  height: 28px;
}

#grobal-header #grobal-header-menu ul
{
  position: absolute;
  top: 60px; left: 0;
  margin: 0;
  padding: 0;
}

#grobal-header #grobal-header-menu ul li
{
  float: left;
  list-style: none;
  margin: 0;
  padding: 0;
  width: 140px;
  height: 28px;
}

#grobal-header #grobal-header-menu ul li a
{
  width: 140px;
  height: 28px;
  display: inline-block;
  background: url(<%= asset_path 'grobal-image/grobal-top-menu.gif' %>) no-repeat;
}

#grobal-header #grobal-header-menu ul li#grobal-header-menu-home a           { background-position: -140px 0; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-home a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-home a.self-link { background-position: 0 0; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-study a           { background-position: -140px -28px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-study a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-study a.self-link { background-position: 0 -28px; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-calender a           { background-position: -140px -56px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-calender a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-calender a.self-link { background-position: 0 -56px; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-bbs a           { background-position: -140px -84px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-bbs a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-bbs a.self-link { background-position: 0 -84px; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-freeml a           { background-position: -140px -112px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-freeml a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-freeml a.self-link { background-position: 0 -112px; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-sns a           { background-position: -140px -140px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-sns a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-sns a.self-link { background-position: 0 -140px; }

#grobal-header #grobal-header-menu ul li#grobal-header-menu-about a           { background-position: -140px -168px; }
#grobal-header #grobal-header-menu ul li#grobal-header-menu-about a:hover,
#grobal-header #grobal-header-menu ul li#grobal-header-menu-about a.self-link { background-position: 0 -168px; }

#grobal-contents
{
  width: 960px;
  margin: 10px;
  padding: 0;
}

#grobal-side-navigation
{
  margin: 0;
  padding: 10px;
  width: 240px;
  float: left;
}

#grobal-side-navigation h1
{
  font-size: 20px;
  text-align: left;
}

#grobal-side-navigation section
{
  margin-bottom: 30px;
}

#grobal-side-navigation section ul
{
  margin-left: 15px;
}

#grobal-side-navigation section ul li
{
  list-style: none;
}

#grobal-main-column
{
  margin: 0;
  padding: 10px;
  width: 680px;
  float: right;
}

#grobal-main-column h1
{
  font-size: 28px;
  text-decoration: underline;
  margin-bottom: 30px;
}

#grobal-main-column h2
{
  font-size: 20px;
}

#grobal-main-column section
{
  margin-top: 10px;
  margin-bottom:30px
}

#grobal-main-column section ul
{
  margin-left: 15px;
}

#grobal-main-column section ul li
{
  list-style: none;
}
#grobal-footer
{
  margin: 0 0 20px 0;
  padding: 0;
  width: 980px;
  clear: both;
}

#grobal-footer address
{
  text-align: center;
  line-height: 1.5em
}

#index-update
{
  float: left;
  width: 640px;
  height: 480px;
}

#index-update section
{
  float: left;
  width: 290px;
  height: 210px;
  margin: 0;
  padding: 15px;
  background-image: url(<%= asset_path 'index-image/index-update-bg.png' %>);
}

#index-update section .index-update-header
{
  height: 60px;
  width: 280px;
  margin: 5px;
  padding: 0;
}

#index-update section .index-update-header img
{
  display: block;
  height:60px;
  width:60px;
  float:left;
}

#index-update section .index-update-header h2
{
  display: block;
  float: left;
  height: 20px;
  width: 200px;
  font-size: 20px;
  margin: 20px 0 20px 20px;
}

#index-update section h3
{
  margin-left:5px;
  margin-top:5px;
}

#index-update section .index-update-contents
{
  margin: 5px;
  padding: 0;
  width: 280px;
}

#index-update section .index-update-contents ul
{
  margin-left: 10px;
  list-style: none;
}

#index-update section .index-update-contents ul li
{
}

#index-update section .index-update-contents ul li span.index-update-date
{
  text-align: left;
}

#index-update section .index-update-contents ul li span.index-update-info
{
  text-align: right;
}

#index-timeline
{
  float: right;
  width: 290px;
  height: 450px;
  padding: 15px;
  margin: 0;
  background-image: url(<%= asset_path 'index-image/index-tl-bg.png' %>);
}
